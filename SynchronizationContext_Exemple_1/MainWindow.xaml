<Window x:Class="SynchronizationContext_Exemple_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SynchronizationContext_Exemple_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="TbText" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Text" VerticalAlignment="Center"/>
            <Button x:Name="BtnClick" Width="220" Click="BtnClick_OnClick">Click</Button>
        </StackPanel>
    </Grid>
</Window>
